<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/txtLabelTrackName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/track_name"
            android:textSize="@dimen/fragment_details_view_text_size"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/txtLabelTrackPrice"
            app:layout_constraintEnd_toEndOf="@id/txtLabelTrackName"
            app:layout_constraintTop_toBottomOf="@id/txtTrackName"
            android:textSize="@dimen/fragment_details_view_text_size"
            android:text="@string/price"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/txtLabelGenre"
            app:layout_constraintEnd_toEndOf="@id/txtLabelTrackName"
            app:layout_constraintTop_toBottomOf="@id/txtLabelTrackPrice"
            android:textSize="@dimen/fragment_details_view_text_size"
            android:text="@string/genre"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/txtLabelDescription"
            app:layout_constraintEnd_toEndOf="@id/txtLabelTrackName"
            app:layout_constraintTop_toBottomOf="@id/txtLabelGenre"
            android:textSize="@dimen/fragment_details_view_text_size"
            android:text="@string/description"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/txtTrackName"
            app:layout_constraintStart_toEndOf="@id/txtLabelTrackName"
            app:layout_constraintTop_toTopOf="@id/txtLabelTrackName"
            android:textSize="@dimen/fragment_details_view_text_size"
            android:text="@string/track_name"
            android:layout_marginStart="15dp"
            android:ems="12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/txtTrackPrice"
            app:layout_constraintTop_toTopOf="@id/txtLabelTrackPrice"
            app:layout_constraintStart_toStartOf="@id/txtTrackName"
            android:textSize="@dimen/fragment_details_view_text_size"
            android:text="@string/price"
            android:ems="12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/txtGenre"
            app:layout_constraintTop_toTopOf="@id/txtLabelGenre"
            app:layout_constraintStart_toStartOf="@id/txtTrackName"
            android:textSize="@dimen/fragment_details_view_text_size"
            android:text="@string/genre"
            android:ems="12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/txtDescription"
            app:layout_constraintTop_toTopOf="@id/txtLabelDescription"
            app:layout_constraintStart_toStartOf="@id/txtTrackName"
            android:textSize="@dimen/fragment_details_view_text_size"
            android:text="@string/genre"
            android:minLines="12"
            android:maxLines="50"
            android:ems="12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>